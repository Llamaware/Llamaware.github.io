{
	"id": "multiplatform",
	"name": "Multiplatform",
	"authors": ["Basil"],
	"description": "Compatibility mod to allow the game to run on macOS and Linux with full Steam support.",
	"version": "1.0.2",
	"files": {
		"plugins": ["plugins/macosTrackpad.js"],
		"inject": [
			{
				"file": "inject/checks.js",
				"at": "tombPostModParse"
			},

			{
				"file": "inject/appData.js",
				"at": "tombPostPluginInject"
			},
			{
				"file": "inject/greenworks.js",
				"at": "tombPostPluginInject"
			}
		]
	}
}